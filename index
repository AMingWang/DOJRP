        document.getElementById('server-ip').onclick = function() {
            // ç²å– IP åœ°å€çš„æ–‡æœ¬å…§å®¹ï¼Œä¸¦å»é™¤å‰å¾Œç©ºç™½
            const ip = this.textContent.trim();
